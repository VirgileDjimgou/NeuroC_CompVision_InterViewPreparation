<Window x:Class="VisionClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NeuroC Vision"
        Height="250"
        Width="400">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Detection Result"
                       FontSize="18"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>

            <TextBlock x:Name="PositionText"
                       FontSize="16"
                       HorizontalAlignment="Center"/>

            <Button Content="Start"
                    Width="120"
                    Margin="0,10,0,0"
                    Click="Start_Click"/>

            <Button Content="Stop"
                    Width="120"
                    Margin="0,5,0,0"
                    Click="Stop_Click"/>

        </StackPanel>
    </Grid>
</Window>