      <Window x:Class="VisionClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NeuroC Vision"
        Height="620"
        Width="900"
        Background="#1E1E2E">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <!-- Live-Video + Overlay -->
        <Border Grid.Column="0" BorderBrush="#444" BorderThickness="1"
                Background="Black" CornerRadius="4">
            <Grid x:Name="VideoContainer">
                <Image x:Name="VideoImage"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Canvas x:Name="OverlayCanvas"
                        ClipToBounds="True"/>
                <TextBlock x:Name="NoSignalText"
                           Text="Kein Signal"
                           Foreground="#888"
                           FontSize="24"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Seitenleiste -->
        <StackPanel Grid.Column="1" Margin="10,0,0,0">

            <TextBlock Text="NeuroC Vision"
                       FontSize="20" FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,15"/>

            <!-- Steuerung -->
            <Button Content="▶ Start" Width="180" Height="36"
                    Margin="0,0,0,5" Click="Start_Click"
                    Background="#27AE60" Foreground="White" FontWeight="Bold"/>

            <Button Content="■ Stop" Width="180" Height="36"
                    Margin="0,0,0,15" Click="Stop_Click"
                    Background="#C0392B" Foreground="White" FontWeight="Bold"/>

            <!-- Erkennungsmodus -->
            <TextBlock Text="Erkennungsmodus" Foreground="#CCC"
                       FontSize="13" Margin="0,0,0,5"/>

            <ComboBox x:Name="ModeComboBox" Width="180"
                      SelectionChanged="ModeComboBox_SelectionChanged">
                <ComboBoxItem Content="Farbe (Rot)" IsSelected="True"/>
                <ComboBoxItem Content="Gesicht"/>
                <ComboBoxItem Content="Kanten (Canny)"/>
                <ComboBoxItem Content="Kreise (Hough)"/>
            </ComboBox>

            <!-- Status -->
            <Border Margin="0,20,0,0" Background="#2D2D44"
                    CornerRadius="4" Padding="10">
                <StackPanel>
                    <TextBlock Text="Status" Foreground="#AAA"
                               FontSize="12" Margin="0,0,0,5"/>
                    <TextBlock x:Name="StatusText"
                               Foreground="#EEE" FontSize="13"
                               TextWrapping="Wrap"
                               Text="Bereit"/>
                    <TextBlock x:Name="PositionText"
                               Foreground="#6BCB77" FontSize="13"
                               Margin="0,5,0,0"/>
                    <TextBlock x:Name="FpsText"
                               Foreground="#888" FontSize="11"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>